{
  "builders": [
    {
      "CPUs": "{{user `vm-cpu-num`}}",
      "RAM": "{{user `vm-mem-size`}}",
      "RAM_reserve_all": true,
      "firmware": "efi",
      "boot_command":[ "<wait30>",
        "root<enter><wait>",  
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait20>",
        "setup-alpine<enter>",
        "us <enter>",
        "us <enter>",
        "{{user `host_name`}} <enter><enter>",
        "dhcp <enter><enter><enter>",    
        "{{user `ssh_password`}}<enter>",
        "{{user `ssh_password`}}<enter>",
        "<enter><enter><enter><wait30>",
        "<enter><enter><wait>",
        "sda<enter>",
        "lvm<enter>",
        "sys<enter><wait>y<enter><wait60>",
        "wget http://dl-cdn.alpinelinux.org/alpine/v3.13/community/x86_64/open-vm-tools-11.2.0-r0.apk",
        "apk update",
        "apk add open-vm-tools",
        "apk add open-vm-tools-guestinfo",
        "apk add open-vm-tools-deploypkg",
        "apk add --upgrade open-vm-tools-11.2.0-r0.apk --force-non-repository",
        "rc-update add open-vm-tools boot",
        "reboot"
      ], 
      "cd_files": [
          "{{template_dir}}/http/meta-data",
          "{{template_dir}}/http/user-data"
       ],
      "cd_label": "cidata",
      "boot_wait": "3s",
      "convert_to_template": "true",
      "create_snapshot": "false",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "datastore": "{{user `vcenter_datastore`}}",
      "disk_controller_type": "pvscsi",
      "folder": "{{user `vcenter_folder`}}",
      "guest_os_type": "other3xLinux64Guest",
      "cluster": "{{user `vcenter_cluster`}}",
      "insecure_connection": "true",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_urls`}}",
      "network_adapters": [
        {
          "network": "{{user `vcenter_network`}}",
          "network_card": "vmxnet3"
        }
      ],
      "notes": "{{user `vm-notes`}}\nDefault SSH User: {{user `ssh_username`}}\nDefault SSH Pass: {{user `ssh_password`}}\nBuilt by Packer @ {{isotime \"2006-01-02 03:04\"}}.",
      "password": "{{user `vcenter_password`}}",
      "shutdown_command": "echo 'alpine'|sudo -S shutdown -P now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "40m",
      "ssh_handshake_attempts": "100000",
      "ssh_username": "{{user `ssh_username`}}",
      "storage": [
        {
          "disk_size": "{{user `vm-disk-size`}}",
          "disk_thin_provisioned": true
        }
      ],
      "type": "vsphere-iso",
      "username": "{{user `vcenter_username`}}",
      "vcenter_server": "{{user `vcenter_server`}}",
      "vm_name": "{{user `vm_name`}}"
    }
  ]
 }